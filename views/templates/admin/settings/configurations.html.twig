{% extends '@PrestaShop/Admin/layout.html.twig' %}
{% trans_default_domain "Modules.Checkboform.Admin" %}
{% import '@PrestaShop/Admin/macros.html.twig' as ps %}


{% block content %}
    {% set settings = form.settings %}
    {{ form_start(settings, {'attr' : {'class': 'form', 'id': 'cachepage'} }) }}
    <div class="row justify-content-center">
        {% block checkboform_form_settings %}
            <div class="col-xl-10">
                <div class="card">
                    <h3 class="card-header">
                        <i class="material-icons">zoom_out_map</i> {{ 'Basic Settings'|trans({}, 'Modules.Checkboform.Admin') }}
                    </h3>
                    <div class="card-block row">
                        <div class="card-text">
                            <div class="row">
                                <div class="col">
                                    {{ ps.warningtip('This is related to #19540. help is defined but not displayed. If you remove this form_row, form_rest display the field "Yes and No" with help but without popover tooltip.'|trans({}, 'Modules.Checkboform.Admin')) }}
                                </div>
                            </div>
                                {{ form_row(settings.CHECKBOFORM_YESANDNO) }}
                                <hr>
                            <div class="row">
                                <div class="col">
                                    {{ ps.warningtip('It\'s impossible to manage form_errors like this.'|trans({}, 'Modules.Checkboform.Admin')) }}
                                </div>
                            </div>
                            <div class="form-group row">
                              <label for="validationServerUsername" class="pr-3 form-control-label">Email</label>
                              <div class="input-group col-sm">
                                <input type="text" class="form-control is-invalid" id="validationServerUsername" aria-describedby="inputGroupPrepend3" required>
                                <div class="invalid-feedback">
                                  Please choose a valid e-mail.
                                </div>
                              </div>
                            </div>
                                <hr>
                            <div class="row">
                                <div class="col">
                                    {{ ps.warningtip('This is related to #19552. You need to call specifically in the form row to assign currentIP.'|trans({}, 'Modules.Checkboform.Admin')) }}
                                </div>
                            </div>
                                {{ form_row(settings.CHECKBOFORM_IPADDRESS, {'currentIp': currentIp}) }}
                                <hr>
                            {% block form_rest %}
                                {{ form_rest(settings) }}
                            {% endblock %}
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-end">
                            <button class="btn btn-primary">{{ 'Save'|trans({}, 'Admin.Actions') }}</button>
                        </div>
                    </div>
                </div>
            </div>
        {% endblock %}

    </div>
    {{ form_end(settings) }}

{% endblock %}


{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('../modules/checkboform/views/js/settings/settings_form.js') }}"></script>
{% endblock %}

